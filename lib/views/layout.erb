<script type="text/javascript">
  function hideFlash() {
    var flash = $('#flash-container');
    if (flash.length > 0) {
      window.setTimeout(function () {
        flash.fadeTo(500, 0).slideUp(500, function () {
          $(this).remove();
        });
      }, 5000);
    }
  }

  $(document).ready(function () {
    hideFlash();
  });
</script>




