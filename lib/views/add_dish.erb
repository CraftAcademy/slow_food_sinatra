<%if current_user.try(:admin)%>
<%= form('/menu/add_dish', :post) %>

<% fieldset(:dish) do |f| %>
<%= f.label(:name) %>
<%= f.input(:name) %>
<%= f.label(:price) %>
<%= f.input(:price) %>
<% end %>
<% fieldset(:category) do |k| %>
<%= k.label(:name) %>
<%= k.input(:name) %>
<% end %>

<%= submit 'Add Dish' %>
<%else%>
<p>
  Please, enjoy ordering and leave dish creation to our Chef!
</p>
<%end%>
